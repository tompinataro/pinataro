worker_processes 1;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile      on;

  server {
    listen <%= ENV["PORT"] %>;
    root <%= ENV["NGINX_ROOT"] || "public" %>;
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;
    }

    location ~* \.(css|js|jpg|jpeg|gif|png|svg|ico|webp|woff|woff2|ttf|otf|eot|mp4)$ {
      expires max;
      add_header Cache-Control "public";
      try_files $uri =404;
    }
  }
}
