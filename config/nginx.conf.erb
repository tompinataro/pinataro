# config/nginx.conf.erb
daemon off;
worker_processes 1;

events { worker_connections 1024; }

http {
  include       /app/config/mime.types;
  default_type  application/octet-stream;
  sendfile      on;

  access_log /dev/stdout;
  error_log  /dev/stderr;

  server {
    # Heroku provides PORT at runtime; ERB renders the number here.
    listen <%= ENV['PORT'] %>;
    server_name _;

    # Serve the static site from /public
    root /app/public;
    index index.html;

    # Exact file, else 404 (remove extra headers for now)
    location / {
      try_files $uri $uri/ =404;
    }

    # Static assets (optional, but safe)
    location ~* \.(?:mp4|mov|m4v|png|jpg|jpeg|gif|ico|css|js|pdf|vcf)$ {
      try_files $uri =404;
      expires 1h;
      add_header Cache-Control "public";
    }
  }
}