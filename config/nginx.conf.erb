# config/nginx.conf.erb
daemon off;
worker_processes 1;

events { worker_connections 1024; }

http {
  include       config/mime.types;
  default_type  application/octet-stream;
  sendfile      on;

  access_log /dev/stdout;
  error_log  /dev/stderr;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;

    # Serve your static site from /public
    root /app/public;
    index index.html;

    # Try exact file, then folder index, else 404
    location / {
      try_files $uri $uri/ =404;
    }

    # Let browsers range-request the MP4s, etc.
    location ~* \.(?:mp4|mov|m4v|png|jpg|jpeg|gif|ico|css|js|pdf|vcf)$ {
      try_files $uri =404;
      expires 1h;
      add_header Cache-Control "public";
      add_header Accept-Ranges bytes;
    }
  }
}